<div class="container">
    <div class="row pt-1 mt-1 mr-1">
        <form action="/productos/update/{{producto._id}}?_method=PUT" method="POST" enctype="multipart/form-data" class="container pt-1 mt-3 mr-1">
            <input type="hidden" name="_method" value="PUT">
            <div class="row form-group justify-content-center text-center">
                <div class="form-row formulario">
                    <div class="col-12 card-header mb-2">
                        <h1>Editar producto</h1>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input name="nombre" type="text" class="form-control" placeholder="Nombre" 
                                value="{{producto.nombre}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="descripcion" type="text" class="form-control" placeholder="DescripciÃ³n"
                                value="{{producto.descripcion}}">
                        </div>
                        <div class="form-group">
                            <input name="precio" type="number" class="form-control" placeholder="Precio (1,10)" step="0.01"
                                value="{{producto.precio}}">
                        </div>
                        <div class="form-group">
                            <input name="imagen" type="file" class="form-control" placeholder="Archivo" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </div>
        </form>
    </div>
</div>